/* Use a photoresistor (or photocell) to turn on an LED in the dark
   More info and circuit schematic: http://www.ardumotive.com/how-to-use-a-photoresistor-en.html
   Dev: Michalis Vasilakis // Date: 8/6/2015 // www.ardumotive.com */
   

//Constants
const int pResistor = A0; // Photoresistor at Arduino analog pin A0
const int ledPin=9;// Led pin at Arduino pin A9
const int potenPin = A1; // Input from Potenciometro

//Variables
double value;          // Store value from photoresistor (0-1023)
double threshold;

void setup(){
 pinMode(ledPin, OUTPUT);  // Set lepPin - 9 pin as an output
 pinMode(pResistor, INPUT);// Set pResistor - A0 pin as an input (optional)
 pinMode(potenPin, INPUT);
 Serial.begin(9600);
}

void loop(){
  value = analogRead(pResistor);
  threshold = analogRead(potenPin);
  //You can change value "100"
  if (value > threshold){
    digitalWrite(ledPin, LOW);  //Turn led off
  }
  else{
    digitalWrite(ledPin, HIGH); //Turn led on
  }
   Serial.println("Potenciometro: ");
   Serial.println(threshold/1023);
   Serial.println("Sensor: ");
   Serial.println(value/1023);
  delay(500); //Small delay
}
